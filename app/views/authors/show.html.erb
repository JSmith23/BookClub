<h1> <%= @authors.name %></h1>
<%= link_to "Delete Author", author_path(@authors), method: :delete %>

<div class="books">
<h2>Books</h2>
  <ul>
  <% @authors.books.each do |book| %>
  <li><h3><%= book.title %></h3></li>
  <ul>
    <li>Pages: <%= book.pages %></li>
    <li><strong>Top Review</strong></li>
      Title: <%= book.reviews.top_three.first.title %>
      <br>Score: <%= book.reviews.top_three.first.score %>
      <br>User Name: <%= book.reviews.top_three.first.user.name %>
    </ul>
  <% end %>
  </ul>

</div>
