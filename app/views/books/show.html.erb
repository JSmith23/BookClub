<div>
<span><%= link_to("All Books", root_path) %></span>
<span><%= link_to("New Review", new_review_path) %></span>
<span><%= link_to "Delete Book", book_path(@books), method: :delete %></span>
</div>

<h1><%= @books.title %></h1>


<div class="books">
<h2> Book Info </h2>
<ul>
  <li><strong>Pages: </strong><%= @books.pages %></li>
  <li><strong>Year: </strong><%= @books.year %></li>
  <li><strong>Author(s): </strong><br>
  <% @book_authors.each do |author| %>
  <%= link_to(author.name, author_path(author)) %> <br> <% end %></li>
</ul>

</div>


<div class="statistics">
  <h2>Statistics</h2>

  <h3> Top 3 Reviews </h3>
  <% @top_three.each do |review| %>
    <ul>
    <li><strong><%= review.title %> </strong></li>
      <strong>User Name: </strong><%= link_to(review.user_name, user_path(review.user)) %><br>
      <strong>Rating: </strong><%= review.score %>
    </ul>
  <% end %>

  <h3> Bottom 3 Reviews </h3>
  <% @bottom_three.each do |review| %>
    <ul>
    <li><strong><%= review.title %> </strong></li>
      <strong>User Name: </strong><%= link_to(review.user_name, user_path(review.user)) %><br>
      <strong>Rating: </strong><%= review.score %>
    </ul>
  <% end %>

  <h3>Average Rating: </h3>
  <ul>
  <li><%= @review_avg_rating %></li>
  </ul>
</div>

<div class="reviews">
  <h2>Reviews: </h2>
  <ul>
  <% @books_reviews.each do |review| %>
  <li><strong><%= review.title %></strong></li>
  <strong>User Name: </strong><%= link_to(review.user_name, user_path(review.user)) %>
  <br><strong>Rating: </strong><%= review.score %>
  <br><strong>Comments: </strong><%= review.description %>
  <br>
  <br>

  <% end %>
  </ul>
</div>
