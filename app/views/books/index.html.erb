<h1>All Books</h1>

<div class="statistics">
  <h2>Statistics</h2>
  <p>
    <strong>Average Rating: </strong>
  </p>
</div>

<% @books.each do |book| %>
<div class="books">
<h2><%= book.title %></h2>
<ul>
  <li>Pages: <%= book.pages %></li>
  <li>Year: <%= book.year %></li>
  <% book.authors.each do |author| %>
  <li>Author: <%= author.name %> </li>
  <% end %>
  <li> <strong>Total Reviews: </strong><%= book.reviews.count %></li>
  <li> <strong>Average Rating: </strong><%= book.reviews.average_rating %></li>

</ul>
</div>

<% end %>
